# Supabase Database Configuration
# Use CONNECTION POOLING for Vercel serverless functions
DATABASE_URL=postgresql://postgres.xxxx:[password]@aws-0-[region].pooler.supabase.com:6543/postgres

# Supabase API Configuration
SUPABASE_URL=https://xxxx.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Database Settings
CREATE_DATABASE=false
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=0
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Redis Configuration (Upstash recommended for serverless)
REDIS_URL=redis://default:password@region-redis.upstash.io:6379

# Security
SECRET_KEY=your-secret-key-here
ENVIRONMENT=production

# API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_API_KEY=your-google-api-key
TAVILY_API_KEY=your-tavily-api-key

# Vector Database (Supabase Vector/pgvector)
ENABLE_VECTOR_SEARCH=true
VECTOR_DIMENSION=1536

# Monitoring
SUPABASE_LOGS=true
LOG_LEVEL=INFO

# Frontend Configuration
VITE_SUPABASE_URL=https://xxxx.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key
VITE_API_URL=https://your-app.vercel.app/api